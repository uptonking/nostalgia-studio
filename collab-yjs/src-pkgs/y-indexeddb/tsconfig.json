{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["../lib0/**/*", "node_modules/**/*", "dist", "dist/**/*.js"]
}
