{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["es2015", "dom", "dom.iterable"],
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationDir": "./dist/typings",
    "strict": true,
    "moduleResolution": "Bundler",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src", "tests"]
}
