{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist/",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "commonjs",
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"]
}
